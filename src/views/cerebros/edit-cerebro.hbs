<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Edit Zombie</h3>
        </div>
        <div class="card-body">
            <form action="/cerebros/edit/{{cerebro.id}}?_method=PUT" method="POST">
               <div class="form-group">
                    <input type="text" name="description" class="form-control" value="{{cerebro.description}}">
               </div>
                <div class="form-group">
                    <input type="text" name="flavor" class="form-control" value="{{cerebro.flavor}}">
               </div>
               <div class="form-group">
                    <input type="text" name="price" class="form-control" value="{{cerebro.price}}">
               </div>
               <div class="form-group">
                    <input type="text" name="picture" class="form-control" value="{{cerebro.picture}}">
               </div>
               <div class="form-group">
                   <button class="btn btn-dark">Guardar</button>
               </div>
            </form>
        </div>
    </div>
</div>