<div class="container">
    <table class="table table-striped">
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Tipo</th>
            <th>Acciones</th>
        </tr>
        {{#each zombies}}
        <div class="col-md-3">
            <tr>
                    <td>{{nombre}}</td>
                    <td>{{email}}</td>
                    <td>{{type}}</td>
                    <td>
                        <a href="/zombies/edit/{{_id}}">
                            <i class="fas fa-edit" title="Actualizar"></i>
                        </a>
                        <form action="/zombies/delete/{{_id}}?_method=DELETE" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-link"><i class="fas fa-trash text-danger " title="Eliminar"></i></button>
                        </form>
                    </td>
                </tr>
        </div>
        {{/each}}

    </table>

</div>

<a href="/zombies/add"><button class="btn btn-outline-success"><i class="fas fa-plus" style="margin: 5px;"></i>Agregar nuevo Zombie</button></a>
