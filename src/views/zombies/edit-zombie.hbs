<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Edit Zombie</h3>
        </div>
        <div class="card-body">
            <form action="/zombies/edit/{{zombie.id}}?_method=PUT" method="POST">
               <div class="form-group">
                    <input type="text" name="nombre" class="form-control" value="{{zombie.nombre}}">
               </div>
                <div class="form-group">
                    <input type="text" name="email" class="form-control" value="{{zombie.email}}" >
               </div>
               <div class="form-group">
                    <input type="text" name="type" class="form-control" value="{{zombie.type}}">
               </div>
               <div class="form-group">
                   <button class="btn btn-dark">Guardar</button>
               </div>
            </form>
        </div>
    </div>
</div>